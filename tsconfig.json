{
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": "./src",
        "outDir": "./tsc",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        // "moduleResolution": "node",
        "target": "es2016",
        "jsx": "react",
        "pretty": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        // "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        // "importHelpers": true, // importing helper functions from tslib
        // "noEmitHelpers": true, // disable emitting inline helper function
        "noErrorTruncation": true,
        "lib": [
            "es6",
            "dom"
            // "es2016",
            // "es2017.object"
        ],
        "types": [
            "webpack-env",
            "node",
            "jest"
        ],
        "paths": {
            "~/*": [
                "./*"
            ]
        }
    },
    "exclude": [
        "bin",
        "node_modules",
        "coverage"
    ],
    "include": [
        "./src/lib/*.tsx",
        "./src/lib/*d.ts"
    ]
}
